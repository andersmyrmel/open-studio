{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "types": ["./src/types"],
      "types/*": ["./src/types/*"],
      "data/*": ["./src/data/*"],
      "lib/*": ["./src/lib/*"],
      "hooks/*": ["./src/hooks/*"],
      "components/*": ["./src/components/*"],
      "state/*": ["./src/state/*"],
      "ui-patterns": ["./packages/ui-patterns/index.tsx"],
      "ui-patterns/*": ["./packages/ui-patterns/src/*"],
      "ui": ["./packages/ui/index.tsx"],
      "ui/*": ["./packages/ui/src/*"],
      "common": ["./packages/shared-data/index.ts"],
      "common/*": ["./packages/shared-data/*"]
    }
  },
  "include": ["next-env.d.ts", "app/**/*.ts", "app/**/*.tsx", "src/**/*.ts", "src/**/*.tsx", "packages/**/*.ts", "packages/**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
